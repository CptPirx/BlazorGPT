@using System.Collections
@using BlazorGPT.Pipeline
@using Microsoft.Extensions.Options
@inject IOptions<PipelineOptions> PipelineOptions

<RadzenDropDown Style="font-size: small;" Disabled="!Enabled!.Value"  TValue="string" @bind-Value="SelectedModel" Data="PipelineOptions.Value.Models" Class="@Class"/>
 
@code {

    protected override void OnInitialized()
    {
        SelectedModel = PipelineOptions.Value.Model;
    }

    [Parameter]
    public bool? Enabled { get; set; } = true;
    [Parameter]
    public string? SelectedModel { get; set; }

    [Parameter]
    public string Class { get; set; }
}