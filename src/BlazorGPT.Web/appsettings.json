{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"

    }
  },
  "AllowedHosts": "*",
  "AzureWebjobsStorage": "UseDevelopmentStorage=true",



  "PipelineOptions": {
    "Model": "gpt-4",
    "Models": [ "gpt-3.5-turbo", "gpt-4" ], // gpt-35-turbo for Azure OpenAI
    "ModelEmbeddings": "text-embedding-ada-002",
    "ModelTextCompletions": "text-davinci-003",
    "MaxTokens": 2500,
    "KrokiHost": "https://kroki.io",
    "EnabledInterceptors": ["Plugins", "Json Hive State", "Structurizr Hive DSL", "State has changed" ],
    "PreSelectedInterceptors": [],

    "FileUpload": {
      "Enabled": false
    },

    "PipelineOptions:Bot": {
      "BotSystemInstruction": "You are a helpful assistant",
      "BotUserId": "[set id]",
      "FileUpload": {
        "Enabled": false
      }
    },

    "Embeddings:RedisConfigurationString": "localhost",
    "Embeddings:RedisIndexName": "blazorgpt_idx",
    "Embeddings:MaxTokensToIncludeAsContext": 1600,

    "Embeddings:UseRedis": false,
    "Embeddings:UseSqlite": false,
    "Embeddings:SqliteConnectionString": "",

    "BING_API_KEY": "[get a key]",
    "GOOGLE_API_KEY": "[get a key]",
    "GOOGLE_SEARCH_ENGINE_ID": "[get an id]",


    "PipelineOptions:serviceType": "AzureOpenAI", //AzureOpenAI or  OpenAI
    "PipelineOptions:Model": "gpt-4-turbo",
    "PipelineOptions:ModelEmbeddings": "text-embedding-ada-002",
    "PipelineOptions:ModelTextCompletions": "davinci-002text-davinci-003",
    "PipelineOptions:Models": [ "gpt-35-turbo", "gpt-4", "gpt-4-turbo" ],
    "PipelineOptions:endpoint": "https://[yourendpoint}].openai.azure.com/", // only if using AzureOpenAI
    "PipelineOptions:apiKey": "",
    "PipelineOptions:orgId": ""

  }

}
  